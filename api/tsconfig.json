{
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        "lib": ["es5", "es6", "dom"],
        "allowJs": true,
        "skipLibCheck": true,
        "outDir": "./",
        "rootDir": "./",
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
    },
    "exclude": ["node_modules"],
    "include": ["./*.ts"],
    "skipLibCheck": true
}
